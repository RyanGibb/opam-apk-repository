opam-version: "2.0"
build: [
  ["sh" "-c" "sudo apk add kmod-32-r0.apk"]
]
remove: [
  ["sh" "-c" "sudo apk del kmod"]
]
depends: [
  "libcrypto3"
  "musl"
  "xz-libs"
  "zlib"
  "zstd-libs"
  ("busybox-binsh" | "dash-binsh" | "yash-binsh")
]

extra-source "kmod-32-r0.apk" {
  src: "https://dl-cdn.alpinelinux.org/alpine/v3.20/main/x86_64/kmod-32-r0.apk"
}
