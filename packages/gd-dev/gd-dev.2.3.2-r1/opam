  "gd"
  "libgd" {= "2.3.2-r1"}
  "pc-freetype2" {>= "9.8.3"}
  "pc-libjpeg"
  "pc-libpng"
  "pc-libwebp"
  "pc-zlib"
  "perl"
  "pkgconfig"
]
extra-source "gd-dev-2.3.2-r1.apk" {
  src: "https://dl-cdn.alpinelinux.org/alpine/v3.15/main/x86_64/gd-dev-2.3.2-r1.apk"
}
