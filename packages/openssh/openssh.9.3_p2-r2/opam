  "musl" {= "1.2.4-r2"}
  "openssh-server" {= "9.3_p2-r2"}
  "openssh-sftp-server" {= "9.3_p2-r2"}
  ("openssh-client-default" {= "9.3_p2-r2"} | "openssh-client-krb5" {= "9.3_p2-r2"})
]
